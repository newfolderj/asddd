{
  "name": "txa-network-contracts",
  "description": "Smart contracts powering the TXA Network",
  "version": "0.0.1",
  "author": {
    "name": "Arseniy Klempner",
    "url": "https://gitlab.com/arseniy-tacen"
  },
  "devDependencies": {
    "@typechain/ethers-v5": "^11.0.0",
    "prettier": "^2.8.7",
    "solhint": "^3.4.0",
    "ts-node": "^10.9.1",
    "typechain": "^8.2.0",
    "typescript": "^5.0.4",
    "husky": "^8.0.0"
  },
  "keywords": [],
  "private": true,
  "scripts": {
    "clean": "rm -rf cache out",
    "lint": "npm lint:sol && npm prettier:check",
    "lint:sol": "forge fmt --check && npm solhint \"{script,src,test}/**/*.sol\"",
    "prettier:check": "prettier --check \"**/*.{json,md,yml}\"",
    "prettier:write": "prettier --write \"**/*.{json,md,yml}\"",
    "axelar:deploy": "ts-node axelar/index.ts",
    "typechain": "npx typechain --target=ethers-v5 ./out/{Portal.sol,ProcessingChainManager.sol,AssetChainManager.sol,Rollup.sol,Staking.sol}/*.json",
    "prepare": "husky install"
  }
}
